section#compatible-services.section.has-background-white
  .container
    +title('Compatible services')

    -
      const services = [
        { name: 'dareboost', width: 235 },
        { name: 'google-lighthouse', width: 80 },
        { name: 'greenit', width: 220 },
        { name: 'qualys-ssl-labs', width: 170 },
        { name: 'mozilla-observatory', width: 202 },
        { name: 'google-bigquery', width: 182 },
        { name: 'slack', width: 176 }
      ]

    .compatibleServices

      //- Large screen only (> 768px)
      .columns.is-multiline.is-vcentered.is-justify-content-center.is-hidden-mobile
          each service, index in services
            .column.is-3.has-text-centered
              .compatibleServices__item
                +svg(service.name, true, 'services/')(width= service.width)


      //- Mobile only with carousel (<= 768px)
      .slider.is-hidden-tablet
        //- Carousel
        .slider__track
          each service, i in services
            .slider__slide
              +svg(service.name, true, 'services/')

        //- Bullets
        nav.slider__dots.is-hidden-tablet
          ul.slider__dotsWrap
            each _, i in Array(services.length)
              li
                button.slider__dotsItem(data-index=i)
